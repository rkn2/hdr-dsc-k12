import numpy as np
import ipywidgets as widgets
from IPython.display import display

def plot_interactive_lurking(n_samples=100, noise_level=10):
    # Setup Data based on Sliders
    np.random.seed(42)
    # The Lurking Variable: Temperature (60-100 F)
    temperature = np.random.uniform(60, 100, n_samples)
    
    # Ice Cream Sales (Dependent on Temp)
    # Higher temp -> Higher sales
    ice_cream = 2.5 * temperature + np.random.normal(0, noise_level, n_samples) - 50
    
    # Shark Attacks (Dependent on Temp)
    # Higher temp -> More swimmers -> More attacks
    shark_attacks = 0.8 * temperature + np.random.normal(0, noise_level/2, n_samples) - 30
    
    # Visualization
    fig, (ax1, ax2) = plt.subplots(1, 2, figsize=(15, 5))
    
    # Plot 1: The Misleading Correlation
    scatter = ax1.scatter(ice_cream, shark_attacks, c='gray', alpha=0.7)
    ax1.set_title("What we SEE: Ice Cream vs. Shark Attacks", fontsize=14)
    ax1.set_xlabel("Ice Cream Sales ($)")
    ax1.set_ylabel("Shark Attacks")
    ax1.grid(True, linestyle='--', alpha=0.5)
    
    # Add trendline for Plot 1
    m, b = np.polyfit(ice_cream, shark_attacks, 1)
    ax1.plot(ice_cream, m*ice_cream + b, color='red', linestyle='--', label=f"Correlation")
    ax1.legend()

    # Plot 2: The Truth (Colored by Temperature)
    sc = ax2.scatter(ice_cream, shark_attacks, c=temperature, cmap='coolwarm', s=50, edgecolors='k', alpha=0.8)
    ax2.set_title("The Reality: Colored by Temperature", fontsize=14)
    ax2.set_xlabel("Ice Cream Sales ($)")
    ax2.set_ylabel("Shark Attacks")
    cbar = plt.colorbar(sc, ax=ax2)
    cbar.set_label("Temperature (Â°F)")
    ax2.grid(True, linestyle='--', alpha=0.5)
    
    plt.tight_layout()
    plt.show()
    print(f"Observation: There is a clear positive trend. Does buying ice cream attract sharks? Probably not.")
    print(f"Look at the right plot: High Temperature (Red) causes BOTH high sales and high attacks.")

# Create Sliders
slider_n = widgets.IntSlider(value=100, min=20, max=500, step=10, description='Sample Size:')
slider_noise = widgets.IntSlider(value=10, min=1, max=30, step=1, description='Scatter/Noise:')

ui = widgets.HBox([slider_n, slider_noise])
out = widgets.interactive_output(plot_interactive_lurking, {'n_samples': slider_n, 'noise_level': slider_noise})

display(ui, out)





import matplotlib.pyplot as plt
import numpy as np
import ipywidgets as widgets
from IPython.display import display

def plot_exercise_paradox(show_confounder=False):
    np.random.seed(42)
    n = 200
    
    # Generate Age Groups: Young (20s), Mid (40s), Senior (60s)
    # We simulate a scenario where OLDER people exercise MORE (maybe they are retired?)
    # But OLDER people also have higher baseline Health Risk (Blood Pressure, etc.)
    ages = []
    exercise = []
    health_risk = []
    groups = []
    
    # Young: Low Exercise (busy working), Low Risk
    n_y = 60
    ex_y = np.random.normal(2, 1.5, n_y) 
    risk_y = 30 - 3*ex_y + np.random.normal(0, 5, n_y) # Risk decreases with exercise
    ages.extend(['20s']*n_y)
    exercise.extend(ex_y)
    health_risk.extend(risk_y)
    groups.extend([(ex_y[i], risk_y[i], 'blue', '20s') for i in range(n_y)])

    # Mid: Medium Exercise, Medium Risk
    n_m = 70
    ex_m = np.random.normal(5, 1.5, n_m)
    risk_m = 50 - 3*ex_m + np.random.normal(0, 5, n_m)
    ages.extend(['40s']*n_m)
    exercise.extend(ex_m)
    health_risk.extend(risk_m)
    groups.extend([(ex_m[i], risk_m[i], 'green', '40s') for i in range(n_m)])

    # Senior: High Exercise, High Risk
    n_s = 70
    ex_s = np.random.normal(8, 1.5, n_s)
    risk_s = 70 - 3*ex_s + np.random.normal(0, 5, n_s)
    ages.extend(['60s']*n_s)
    exercise.extend(ex_s)
    health_risk.extend(risk_s)
    groups.extend([(ex_s[i], risk_s[i], 'orange', '60s') for i in range(n_s)])
    
    exercise = np.array(exercise)
    health_risk = np.array(health_risk)

    plt.figure(figsize=(11, 6))
    
    if not show_confounder:
        # AGGREGATED VIEW
        plt.scatter(exercise, health_risk, color='gray', alpha=0.6, s=50)
        
        # Plot Trend Line
        m, b = np.polyfit(exercise, health_risk, 1)
        plt.plot(exercise, m*exercise + b, color='red', linewidth=3, label='Overall Trend')
        
        plt.title("Study Result: Exercise Hours vs. Health Risk Score (Population View)", fontsize=14)
        plt.ylabel("Health Risk Score (Lower is Better)")
        plt.xlabel("Weekly Exercise Hours")
        
        # Annotation
        plt.annotate('Wait... More Exercise = Higher Risk?', xy=(8, 60), xytext=(1, 75),
             arrowprops=dict(facecolor='black', shrink=0.05), fontsize=12, color='red', fontweight='bold')
             
        plt.legend()
    else:
        # STRATIFIED VIEW
        # Plot each group
        for g_name, color in [('20s', 'blue'), ('40s', 'green'), ('60s', 'orange')]:
            # Filter data
            indices = [i for i, x in enumerate(ages) if x == g_name]
            ex_g = exercise[indices]
            risk_g = health_risk[indices]
            
            plt.scatter(ex_g, risk_g, color=color, alpha=0.6, s=50, label=f"Age: {g_name}")
            
            # Trend lines per group
            m, b = np.polyfit(ex_g, risk_g, 1)
            plt.plot(ex_g, m*ex_g + b, color=color, linewidth=3, linestyle='--')

        plt.title("The Paradox Solved: Controlling for Age", fontsize=14)
        plt.ylabel("Health Risk Score (Lower is Better)")
        plt.xlabel("Weekly Exercise Hours")
        plt.legend(title="Age Group")
        
        txt = "When we look at each Age Group individually,
Exercise clearly LOWERS Health Risk!"
        plt.text(0, 80, txt, fontsize=12, fontweight='bold', bbox=dict(facecolor='white', alpha=0.8))

    plt.grid(True, which='both', linestyle='--', linewidth=0.5)
    plt.show()

display(widgets.HTML("<h3>Interactive Data Science: The Exercise Paradox</h3>"))
display(widgets.HTML("A study suggests that people who exercise more have worse health. <br>Use the checkbox to reveal the <b>Confounding Variable</b> (Age) and see the truth."))

w_show = widgets.Checkbox(value=False, description="Reveal Confounder (Age)")
out_plot = widgets.interactive_output(plot_exercise_paradox, {'show_confounder': w_show})
display(widgets.VBox([w_show, out_plot]))

















import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import ipywidgets as widgets
from IPython.display import display

def run_random_experiment(n_subjects=50):
    # Simulated Population: The "Hidden" Health Score
    # We want to see if randomization balances this score between two groups.
    # Let's assume our general population has an average health score of 70.
    np.random.seed(None) # Always new random seed for "New Experiment" feel
    
    population_health = np.random.normal(loc=70, scale=15, size=n_subjects)
    
    # Perform Random Assignment
    # We shuffle the array and split it in half
    np.random.shuffle(population_health)
    midpoint = n_subjects // 2
    
    group_control = population_health[:midpoint]
    group_treatment = population_health[midpoint:]
    
    # Calculate Averages
    avg_c = np.mean(group_control)
    avg_t = np.mean(group_treatment)
    
    # Visualization
    fig, ax = plt.subplots(figsize=(10, 6))
    
    # Histogram for Control
    ax.hist(group_control, bins=10, alpha=0.6, color='blue', label=f'Control Group (n={len(group_control)})\nAvg Health: {avg_c:.1f}')
    # Histogram for Treatment
    ax.hist(group_treatment, bins=10, alpha=0.6, color='orange', label=f'Treatment Group (n={len(group_treatment)})\nAvg Health: {avg_t:.1f}')
    
    ax.axvline(avg_c, color='blue', linestyle='--', linewidth=2)
    ax.axvline(avg_t, color='orange', linestyle='--', linewidth=2)
    
    ax.set_title(f"Random Assignment Results (Sample Size: {n_subjects})", fontsize=14)
    ax.set_xlabel("Hidden Health Score (0-100)")
    ax.set_ylabel("Count of Subjects")
    ax.legend()
    ax.grid(axis='y', alpha=0.3)
    
    plt.show()
    
    diff = abs(avg_c - avg_t)
    print(f"Difference in group averages: {diff:.2f}")
    if n_subjects < 40:
        print("Note: With small sample sizes, random groups can still look quite different!")
    elif diff < 2:
        print("Success: The groups are perfectly balanced. Randomization worked!")
    else:
        print("Result: Randomization usually works, but sometimes random chance creates slight differences.")

# Interaction Elements
slider_subjects = widgets.IntSlider(value=100, min=10, max=1000, step=10, description='Total Subjects:')
btn_rerun = widgets.Button(description="Run Random Assignment", button_style='primary', icon='random')

def on_button_click(b):
    out_rand.clear_output(wait=True)
    with out_rand:
        run_random_experiment(slider_subjects.value)

btn_rerun.on_click(on_button_click)

ui_rand = widgets.VBox([slider_subjects, btn_rerun])
